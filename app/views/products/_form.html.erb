<%= form_for @product, :html => {:class => "form-horizontal center"}, :multipart => true do |f| %>

        
    <div class="form-group">
        <em><%= f.label :avatar , class: "col-md-6  control-label" %></em>
        <div class="col-md-12">
            <%= f.file_field :avatar %>
        </div>
    </div>
        
    <div class="form-group">
        <em><%= f.label :name, "Nombre", class: "col-md-6  control-label" %></em>
        <div class="col-md-12">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    <br>
    <div class="form-group">
        <em><%= f.label :description, "Descripción", class: "col-md-6  control-label" %></em>
        <div class="col-md-12">
            <%= f.text_area :description, class: "form-control" %>
        </div>
    </div>
    <br>
    <div class="form-group">
        <em><%= f.label :price, "Precio",class: "col-md-6  control-label" %></em>
        <div class="col-md-12">
            <%= f.text_field :price, class: "form-control" %>
        </div>
    </div>
    <br><br>
    
    <label for="cats">Categoría:</label>
    <%= f.select :category_id,  @cats.all.collect { |c| [ c.name, c.id ] }, {}, class: "form-control" %>
    <br>
    
    <div class="form-group">
        <div class="d-flex flex-row-reverse bd-highlight">
            <%= f.submit "Guardar", class:"btn btn-primary" %>
        </div>
        
    </div>

<% end %>

